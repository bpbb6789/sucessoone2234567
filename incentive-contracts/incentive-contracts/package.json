{
  "name": "@zoralabs/incentive-contracts",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "build": "forge build",
    "build:sizes": "forge build src/ --sizes",
    "coverage": "forge coverage --report lcov --ir-minimum --no-match-coverage '(test/|script/)'",
    "prettier:check": "prettier --check 'src/**/*.sol' 'test/**/*.sol'",
    "prettier:write": "prettier --write 'src/**/*.sol' 'test/**/*.sol'",
    "slither": "slither . --filter-paths 'node_modules|test'",
    "test": "forge test -vv",
    "test-gas": "forge test --gas-report"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  },
  "devDependencies": {
    "forge-std": "https://github.com/foundry-rs/forge-std#v1.9.1",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.4.1"
  }
}